  <%= form_with model: task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control my-2'%>
    <%= f.label :details %>
    <%= f.text_field :details , class: 'form-control my-2'%>
    <% if !task.new_record? %>
    <%= f.check_box(:completed) %>
    <%= f.label(:completed, "Completed") %>
    <% end %>
    <%= f.submit class: 'btn btn-primary mb-2' %>
  <% end %>
